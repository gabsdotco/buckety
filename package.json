{
  "name": "buckety",
  "version": "0.0.1",
  "description": "A simple CLI for running Bitbucket Pipelines locally",
  "main": "./src/index.ts",
  "type": "module",
  "keywords": [
    "bitbucket",
    "pipelines",
    "cli"
  ],
  "author": "gabsdotco",
  "license": "ISC",
  "bin": {
    "buckety": "./bin/cli"
  },
  "scripts": {
    "start": "bun run ./src/index.ts",
    "build": "bun build ./src/index.ts --outdir ./dist --target bun",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "commander": "^11.1.0",
    "dockerode": "^4.0.0",
    "dotenv": "^16.4.7",
    "globby": "^14.1.0",
    "ansi-regex": "^6.1.0",
    "ink": "6.6.0",
    "ink-scroll-view": "^0.3.5",
    "js-yaml": "^4.1.0",
    "lodash": "^4.17.21",
    "react": "19.2.3",
    "tar": "^7.4.2",
    "tar-fs": "^3.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^8.56.0",
    "@types/bun": "latest",
    "@types/dockerode": "^3.3.23",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash": "^4.14.202",
    "@types/react": "19.2.9",
    "@types/tar-fs": "^2.0.4",
    "eslint": "^8.56.0",
    "globals": "^15.6.0",
    "prettier": "^3.6.2",
    "typescript": "^5.2.2",
    "typescript-eslint": "^7.14.1"
  }
}
